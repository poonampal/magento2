<config>
    <system>
        <section id = "carriers" type = "text" translate = "label" sortOrder = "100" showInWebsite = "1" showInDefault = "1" showInStore = "1">
            <group id = "firstshipping" type = "text" translate = "label" sortOrder = "100" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                <label>First Shipping Method</label>
                <field id = "enable" type = "select" translate = "label" sortOrder = "1" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id = "name" type = "text" translate = "label" sortOrder = "2" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Name</label>
                </field>
                <field id = "price" type = "text" transalte = "label" sortOrder = "3" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Price</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id = "handling_type" type = "select" translate = "label" sortOrder = "4" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Handling Type</label>
                    <source_model>Magento\Shipping\Model\Source\HandlingType</source_model>
                </field>
                <field id = "handling_fee" type = "text" translate = "label" sortOrder = "5" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Handling Fee</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id = "sort_order" type = "text" translate = "label" sortOrder = "6" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Sort Order</label>
                </field>
                <field id = "title" type = "text" translate = "label" sortOrder = "7" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Title</label>
                </field>
                <field id = "sallowspecific" type = "select" translate = "label" sortOrder = "8" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id = "specific_country" type = "select" translate = "label" sortOrder = "9" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Ship to Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id = "show_method" type = "select" translate = "label" sortOrder = "10" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Show Method</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id = "specific_error_msg" type = "text" translate = "label" sortOrder = "11" showInDefault = "1" showInWebsite = "1" showInStore = "1">
                    <label>Display Error Message</label>
                </field>
            </group>
        </section>
    </system>
</config>
